<div class="home_videos">  
  <% @videos.each do |video| %>
  <div class="videobox">
    <div class="left">
      <a href="/videos/<%= video.id %>">
        <div class="thumbnail">
          <img src="http://img.youtube.com/vi/<%= video.url %>/hqdefault.jpg">
        </div>
      </a>
    </div>
    <div class="right">
      <h2><%= video.title %></h2>
      <h3><%= video.description %></h3> 
      <div class="buttons">
        <% if current_page? root_path %>
          <%= button_to "EDIT.", edit_video_path(video.id), :method => "get" %>
        <% end %>
      </div>    
    </div>
  </div>
  <% end %>
</div>
