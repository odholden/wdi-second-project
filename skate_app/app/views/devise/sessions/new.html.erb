<div class="content">

  <div class="login-header">
    <h1>OLLIE.</h1>
    <h2>LOGIN.</h2>
  </div>
  
  <div class="login">
  
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>
    
      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
    
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
    
      <div class="actions">
        <%= f.submit "LOGIN." %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  
  </div>

</div>
